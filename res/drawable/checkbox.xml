<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#11000000" />
                    <corners android:radius="3.0dip" />
                </shape>
            </item>
            <item android:drawable="@drawable/checkbox_checked" android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/checkbox_checked" android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" />
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#11000000" />
                    <corners android:radius="3.0dip" />
                </shape>
            </item>
            <item android:drawable="@drawable/checkbox_unchecked" android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" />
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:drawable="@drawable/checkbox_unchecked" android:left="5.0dip" android:top="5.0dip" android:right="5.0dip" android:bottom="5.0dip" />
        </layer-list>
    </item>
</selector>