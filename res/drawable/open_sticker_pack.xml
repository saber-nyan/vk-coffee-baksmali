<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <inset android:insetLeft="-2.0dip" android:insetRight="-2.0dip" android:insetBottom="-2.0dip">
                    <shape>
                        <stroke android:width="0.5dip" android:color="#ffd1cab8" />
                    </shape>
                </inset>
            </item>
            <item>
                <shape>
                    <solid android:color="#25444444" />
                    <corners android:bottomLeftRadius="4.0dip" android:bottomRightRadius="4.0dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="false">
        <inset android:insetLeft="-2.0dip" android:insetRight="-2.0dip" android:insetBottom="-2.0dip">
            <shape>
                <stroke android:width="0.5dip" android:color="#ffd1cab8" />
            </shape>
        </inset>
    </item>
</selector>